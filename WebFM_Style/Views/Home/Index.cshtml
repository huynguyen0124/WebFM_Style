@{
    ViewData["Title"] = "Home Page";
    var collection = ViewBag.Collection as List<Collection>;
    var news = ViewBag.News as List<News>;
}
@model IEnumerable<WebFM_Style.Models.Product>
<!-- Phần Hero Bắt Đầu -->
<section class="hero">
    <div class="hero__slider owl-carousel">


        @foreach (var item in collection.Take(3))
        {
            <div class="hero__items set-bg" data-setbg="/contents/Images/Collection/@item.Baner">
                <div class="container">
                    <div class="row">
                        <div class="col-xl-5 col-lg-7 col-md-8">
                            <div class="hero__text">
                                <h6>Bộ Sưu Tập Mùa Hè</h6>
                                <h2>@item.Name</h2>
                                <p>
                                    Nhãn hiệu chuyên biệt tạo ra những sản phẩm xa xỉ thiết yếu. Sản xuất đạo đức với cam kết
                                    không ngừng về chất lượng tuyệt vời.
                                </p>
                                <a href="#" class="primary-btn">Mua ngay <span class="arrow_right"></span></a>
                                <div class="hero__social">
                                    <a href="#"><i class="fa fa-facebook"></i></a>
                                    <a href="#"><i class="fa fa-twitter"></i></a>
                                    <a href="#"><i class="fa fa-pinterest"></i></a>
                                    <a href="#"><i class="fa fa-instagram"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        }


    </div>
</section>
<!-- Phần Hero Kết Thúc -->
<!-- Phần Banner Bắt Đầu -->
<section class="banner spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-7 offset-lg-4">
                <div class="banner__item">
                    <div class="banner__item__pic">
                        <img src="~/User/img/banner/banner-1.jpg" alt="">
                    </div>
                    <div class="banner__item__text">
                        <h2>Bộ Sưu Tập Quần Áo 2024</h2>
                        <a href="#">Mua ngay</a>
                    </div>
                </div>
            </div>
            <div class="col-lg-5">
                <div class="banner__item banner__item--middle">
                    <div class="banner__item__pic">
                        <img src="~/User/img/banner/banner-2.jpg" alt="">
                    </div>
                    <div class="banner__item__text">
                        <h2>Phụ Kiện</h2>
                        <a href="#">Mua ngay</a>
                    </div>
                </div>
            </div>
            <div class="col-lg-7">
                <div class="banner__item banner__item--last">
                    <div class="banner__item__pic">
                        <img src="~/User/img/banner/banner-3.jpg" alt="">
                    </div>
                    <div class="banner__item__text">
                        <h2>Giày Thời Trang 2024</h2>
                        <a href="#">Mua ngay</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Phần Banner Kết Thúc -->
<!-- Product Section Begin -->
<section class="product spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <ul class="filter__controls">
                    <li class="active" data-filter="*">Best Sellers</li>
                </ul>
            </div>
        </div>
        <div class="row product__filter">

            @foreach (var item in Model)
            {

                <div class="col-lg-4 col-md-6 col-sm-6">
                    <div class="product__item">
                        <div class="product__item__pic set-bg" data-setbg="/contents/Images/Product/@item.Images.FirstOrDefault()?.Url">
                            <ul class="product__hover">
                                <li><a href="#"><img src="~/User/img/icon/heart.png" alt=""></a></li>
                                <li>
                                    <a href="#"><img src="~/User/img/icon/compare.png" alt=""> <span>Compare</span></a>
                                </li>
                                <li><a href="#"><img src="~/User/img/icon/search.png" alt=""></a></li>
                            </ul>
                        </div>

                        <div class="product__item__text">
                            <h6>@item.Name</h6>
                            <a href="" data-id="@item.Id" class="add-to-cart">+ Thêm giỏ hàng</a>
                            <div class="rating">
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star-o"></i>
                            </div>
                            <h5> @string.Format("{0:N0}", @item.Price) VNĐ</h5>
                            @*   <div class="product__color__select">
                        @foreach (var sizeColor in item.ProductSizeColors)
                        {
                        <label for="pc-@sizeColor.Id">
                        <input type="radio" id="pc-@sizeColor.Id">
                        </label>
                        }
                        </div> *@
                        </div>
                    </div>
                </div>
            }


        </div>
    </div>
</section>
<!-- Product Section End -->
<!-- Phần Danh Mục Bắt Đầu -->
<section class="categories spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <div class="categories__text">
                    <h2>Quần áo Nổi Bật <br /> <span>Bộ Sưu Tập Giày</span> <br /> Phụ Kiện</h2>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="categories__hot__deal">
                    <img src="~/User/img/product-sale.png" alt="">
                    <div class="hot__deal__sticker">
                        <span>Giảm Giá</span>
                        <h5>399.000 VND</h5>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 offset-lg-1">
                <div class="categories__deal__countdown">
                    <span>Ưu Đãi Trong Tuần</span>
                    <h2>Túi Đeo Ngực Nhiều Ngăn Màu Đen</h2>
                    <div class="categories__deal__countdown__timer" id="countdown">
                        <div class="cd-item">
                            <span>3</span>
                            <p>Ngày</p>
                        </div>
                        <div class="cd-item">
                            <span>1</span>
                            <p>Giờ</p>
                        </div>
                        <div class="cd-item">
                            <span>50</span>
                            <p>Phút</p>
                        </div>
                        <div class="cd-item">
                            <span>18</span>
                            <p>Giây</p>
                        </div>
                    </div>
                    <a href="#" class="primary-btn">Mua ngay</a>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Phần Danh Mục Kết Thúc -->
<!-- Categories Section End -->
<!-- Instagram Section Begin -->
<section class="instagram spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="instagram__pic">
                    <div class="instagram__pic__item set-bg" data-setbg="/User/img/instagram/instagram-1.jpg"></div>
                    <div class="instagram__pic__item set-bg" data-setbg="/User/img/instagram/instagram-2.jpg"></div>
                    <div class="instagram__pic__item set-bg" data-setbg="/User/img/instagram/instagram-3.jpg"></div>
                    <div class="instagram__pic__item set-bg" data-setbg="/User/img/instagram/instagram-4.jpg"></div>
                    <div class="instagram__pic__item set-bg" data-setbg="/User/img/instagram/instagram-5.jpg"></div>
                    <div class="instagram__pic__item set-bg" data-setbg="/User/img/instagram/instagram-6.jpg"></div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="instagram__text">
                    <h2>Instagram</h2>
                    <p>
                        FM Style – Nơi hội tụ những xu hướng thời trang hiện đại, mang đến phong cách trẻ trung và cá tính cho bạn mỗi ngày.
                    </p>
                    <h3>#Thời_Trang_Nam</h3>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Instagram Section End -->
<!-- Latest Blog Section Begin -->
<section class="latest spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <span>Tin tức mới nhất</span>
                    <h2>Xu hướng thời trang mới</h2>
                </div>
            </div>
        </div>
        <div class="row">

            @foreach (var item in news)
            {
                <div class="col-lg-4 col-md-6 col-sm-6">
                    <div class="blog__item">
                        <div class="blog__item__pic set-bg" data-setbg="/contents/Images/News/@item.Images"></div>
                        <div class="blog__item__text">
                            <span><img src="img/icon/calendar.png" alt=""> @item.CDT</span>
                            <h5>@item.Title</h5>
                            <a asp-action="BlogDetails" asp-route-id="@item.Id">Đọc thêm</a>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</section>

