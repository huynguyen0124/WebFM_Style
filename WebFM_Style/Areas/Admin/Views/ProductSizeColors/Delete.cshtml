@model WebFM_Style.Models.ProductSizeColor

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>XOÁ SẢN PHẨM-MÀU-SIZE</h1>

<h3>Bạn có chắc là muốn xóa không?</h3>
<div>
    <h4>Sản phẩm Màu Size</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Mã Code
            @* @Html.DisplayNameFor(model => model.Code) *@
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Code)
        </dd>
        <dt class = "col-sm-2">
            Màu
            @* @Html.DisplayNameFor(model => model.Color) *@
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Color.Color1)
        </dd>
        <dt class = "col-sm-2">
            Tên sản phẩm
            @* @Html.DisplayNameFor(model => model.Product) *@
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Product.Name)
        </dd>
        <dt class = "col-sm-2">
            Số lượng
            @* @Html.DisplayNameFor(model => model.ProductInventory) *@
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductInventory.Quantity)
        </dd>
        <dt class="col-sm-2">
            Số lượng bán
            @* @Html.DisplayNameFor(model => model.ProductInventory) *@
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductInventory.QuantitySold)
        </dd>
        <dt class = "col-sm-2">
            Size
            @* @Html.DisplayNameFor(model => model.Size) *@
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Size.Size1)
        </dd>
    </dl>
    
    <div style="float: left; padding-right:10px">
        <a class="btn btn-secondary" asp-action="Index">Quay Lại</a>
    </div>
    <form asp-action="Delete">

        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Xóa" class="btn btn-danger" />
    </form>
</div>
