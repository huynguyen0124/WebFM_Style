@model WebFM_Style.Models.Category

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>THÊM</h1>

<h4>Loại sản phẩm</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
            <div class="form-group">
                <label>Tên loại sản phẩm</label>
                @* <label asp-for="Name" class="control-label"></label> *@
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Tên nhà cung cấp</label>
                @* <label asp-for="SupplierId" class="control-label"></label> *@
                <select asp-for="SupplierId" class ="form-control" asp-items="ViewBag.SupplierId"></select>
            </div>
            <div class="form-group">
                <label>Mô tả</label>
                @* <label asp-for="Description" class="control-label"></label> *@
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <button type="submit" class="btn btn-gradient-primary me-2">Thêm Mới</button>
                <a asp-action="Index" class="btn btn-light">Trở về</a>
            </div>
@* 
            <div class="form-group">
                <input type="submit" value="Thêm" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-light">Trở về</a>
            </div> *@
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
