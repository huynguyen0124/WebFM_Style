@model WebFM_Style.Models.Category

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>XOÁ LOẠI SẢN PHẨM</h1>

<h3>Bạn có chắc là muốn xóa không?</h3>
<div>
    <h4>Loại sản phẩm</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Tên loại sản phẩm
            @* @Html.DisplayNameFor(model => model.Name) *@
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Mô tả
            @* @Html.DisplayNameFor(model => model.Description) *@
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            Trạng thái
            @* @Html.DisplayNameFor(model => model.Status) *@
        </dt>
        @if (Model.Status == true)
        {
            <dd class="col-sm-10">
                Còn hoạt động
            </dd>
        }
        else
        {
            <dd class="col-sm-10">
                Ngừng hoạt động
            </dd>

        }
        <dt class = "col-sm-2">
            Ngày tạo
            @* @Html.DisplayNameFor(model => model.Cdt) *@
        </dt>
        <dd class="col-sm-10">
            @(Model.Cdt.HasValue
                ? Model.Cdt.Value.ToString("dd/MM/yyyy", new System.Globalization.CultureInfo("vi-VN"))
                : "")
        </dd>
        @* <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cdt)
        </dd> *@
        <dt class = "col-sm-2">
            Nhà cung cấp
            @* @Html.DisplayNameFor(model => model.Supplier) *@
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Supplier.Name)
        </dd>
    </dl>
    
    <div style="float: left; padding-right:10px">
        <a class="btn btn-secondary" asp-action="Index">Quay Lại</a>
    </div>
    <form asp-action="Delete">

        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Xóa" class="btn btn-danger" />
    </form>
</div>
