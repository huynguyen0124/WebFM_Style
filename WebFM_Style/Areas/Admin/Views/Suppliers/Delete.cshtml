@model WebFM_Style.Models.Supplier

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>XOÁ NHÀ CUNG CẤP</h1>

<h3>Bạn có chắc là muốn xóa không?</h3>
<div>
    <h4>Nhà cung cấp</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Tên nhà cung cấp
            @* @Html.DisplayNameFor(model => model.Name) *@
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Địa chỉ
            @* @Html.DisplayNameFor(model => model.Address) *@
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class="col-sm-2">
            SĐT
            @* @Html.DisplayNameFor(model => model.Phone) *@
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Phone)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            Trạng thái
            @* @Html.DisplayNameFor(model => model.Status) *@
        </dt>
        @if (Model.Status == true)
        {
            <dd class="col-sm-10">
                Còn hoạt động
            </dd>
        }
        else
        {
            <dd class="col-sm-10">
                Ngừng hoạt động
            </dd>

        }
        <dt class="col-sm-2">
            Ngày tạo
            @* @Html.DisplayNameFor(model => model.Cdt) *@
        </dt>
        <dd class="col-sm-10">
            @(Model.Cdt.HasValue
                ? Model.Cdt.Value.ToString("dd/MM/yyyy", new System.Globalization.CultureInfo("vi-VN"))
                : "")
        </dd>
        @* <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cdt)
        </dd> *@
    </dl>

    <div style="float: left; padding-right:10px">
        <a class="btn btn-secondary" asp-action="Index">Quay Lại</a>
    </div>
    <form asp-action="Delete">

        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Xóa" class="btn btn-danger" />
    </form>
</div>
