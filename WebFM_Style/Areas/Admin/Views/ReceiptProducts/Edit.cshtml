@model WebFM_Style.Models.ReceiptProduct

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>CHỈNH SỬA</h1>

<h4>ReceiptProduct</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Status" />
            <div class="form-group">
                <label asp-for="ProductSizeColorId" class="control-label"></label>
                <select asp-for="ProductSizeColorId" class="form-control" asp-items="ViewBag.ProductSizeColorId"></select>
                <span asp-validation-for="ProductSizeColorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
      
            <div class="form-group">
                <label asp-for="CreateDay" class="control-label"></label>
                <input asp-for="CreateDay" class="form-control" />
                <span asp-validation-for="CreateDay" class="text-danger"></span>
            </div>
          
            <div class="form-group">
                <a asp-action="Index" class="btn btn-light">Trở về</a>
                <button type="submit" class="btn btn-gradient-primary me-2">Sửa</button>
            </div>
        </form>
    </div>
</div>

