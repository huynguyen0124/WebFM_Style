@model WebFM_Style.Models.ProductType

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>XEM CHI TIẾT</h1>

<div>
    <h4>Sản phẩm theo loại</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Tên sản phẩm
            @* @Html.DisplayNameFor(model => model.Name) *@
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Mô tả
            @* @Html.DisplayNameFor(model => model.Description) *@
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            Trạng thái
            @* @Html.DisplayNameFor(model => model.Status) *@
        </dt>
        @if (Model.Status == 1)
        {
            <dd class="col-sm-10">
                Còn hoạt động
            </dd>
        }
        else
        {
            <dd class="col-sm-10">
                Ngừng hoạt động
            </dd>

        }

        <dt class = "col-sm-2">
            Ngày tạo
            @* @Html.DisplayNameFor(model => model.Cdt) *@
        </dt>
        <dd class="col-sm-10">
            @(Model.Cdt.HasValue
                ? Model.Cdt.Value.ToString("dd/MM/yyyy", new System.Globalization.CultureInfo("vi-VN"))
                : "")
        </dd>
        @* <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cdt)
        </dd> *@
        <dt class = "col-sm-2">
            Loại sản phẩm
            @* @Html.DisplayNameFor(model => model.Category) *@
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Category.Name)
        </dd>
    </dl>
</div>
<div>
    <div style="float: left; padding-right:10px">
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.Id">Sửa</a>
    </div>
    <a class="btn btn-secondary" asp-action="Index">Quay Lại</a>
</div>
