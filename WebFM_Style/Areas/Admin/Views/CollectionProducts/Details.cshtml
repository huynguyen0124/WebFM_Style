@model WebFM_Style.Models.CollectionProduct

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>XEM CHI TIẾT</h1>

<div>
    <h4>Sản phẩm Bộ sưu tập</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Trạng thái
            @* @Html.DisplayNameFor(model => model.Status) *@
        </dt>
        @if (Model.Status == true)
        {
            <dd class="col-sm-10">
                Còn hoạt động
            </dd>
        }
        else
        {
            <dd class="col-sm-10">
                Ngừng hoạt động
            </dd>

        }
        @* <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd> *@
        <dt class = "col-sm-2">
            Ngày tạo
            @* @Html.DisplayNameFor(model => model.Cdt) *@
        </dt>

        <dd class="col-sm-10">
            @{
                DateTime parsedDate;
                var formattedDate =Model.Cdt; // Giữ giá trị gốc nếu không thể chuyển đổi.
            }
            @formattedDate
        </dd>


       @*  <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cdt)
        </dd> *@
        <dt class = "col-sm-2">
            Bộ sưu tập
            @* @Html.DisplayNameFor(model => model.Collection) *@
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Collection.Name)
        </dd>
        <dt class = "col-sm-2">
            Tên sản phẩm
            @* @Html.DisplayNameFor(model => model.Product) *@
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Product.Name)
        </dd>
    </dl>
</div>
<div>
    <div style="float: left; padding-right:10px">
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.Id">Sửa</a>
    </div>
    <a class="btn btn-secondary" asp-action="Index">Quay Lại</a>
</div>
